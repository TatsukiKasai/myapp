<h3> スケジュール新規作成　</h3>

<%= form_for @user do |f| %>

<table>
    <tr>
        <th><%= f.label:title,"タイトル" %></th>
        <td><%= f.text_field:title %></td>
    </tr>
    <tr>
        <th><%= f.label:first_date,"開始日" %></th>
        <td><%= f.date_field:first_date %></td>
    </tr>
    <tr>
        <th><%= f.label:final_date,"終了日" %></th>
        <td><%= f.date_field:final_date %></td>
    </tr>
    <tr>
        <th><%= f.label:all_day,"終日" %></th>
        <td>
            <%= f.check_box 'all_day', {}, 1, 0 %>
            <%= label_tag :all_day, "終日の場合はチェックを入れて下さい" %>
        </td>
    </tr>
    <tr>
        <th><%= f.label:sch_memo,"スケジュールメモ" %></th>
        <td><%= f.text_area:sch_memo %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= f.submit"スケジュールを新規登録する" %></li>
        <li><%= link_to"スケジュール一覧に戻る" ,:users%></li>
    </ul>
</div>
<% end %>